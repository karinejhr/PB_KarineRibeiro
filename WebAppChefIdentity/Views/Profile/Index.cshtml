@model IEnumerable<Domain.Entities.Profile>

@{
    ViewData["Title"] = "Perfil";
}

<h3>👩‍🍳 Perfil do Utilizador</h3>
<br/>

<p>
    <a asp-action="Create">Atualizar perfil</a>
</p>
<table class="table table-hover">
    <thead class="thead-light">
    <tr>
        <th>
            Foto
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            Data de Nascimento
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@Html.DisplayFor(modelItem => item.UriImage)" width="50"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nascimento)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
            <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
            <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
        </td>
    </tr>
}
    </tbody>
</table>
