@model IEnumerable<WebAppChefIdentity.Models.Receita>

@{
    ViewData["Title"] = "Início";
}

<h1>📚 Receitas</h1>

<p>
    <a asp-action="Create">Inserir nova</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Origem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TempoPreparo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NivelDificuldade)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Origem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TempoPreparo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NivelDificuldade)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
            <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
            <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
        </td>
    </tr>
}
    </tbody>
</table>
